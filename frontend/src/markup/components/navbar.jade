mixin action-button(action)
  button.btn.btn-default.navbar-btn(
    type     = "button"
    ng-click = "ctrl.#{action}()"
  )
    block

mixin modal-button(target)
  button.btn.btn-default.navbar-btn(
    type        = "button"
    data-toggle = "modal"
    data-target = target
  )
    block



nav.navbar.navbar-default(ng-controller = "NavbarController as ctrl")
  .container-fluid
    .navbar-header
      button.navbar-toggle.collapsed(
        type        = "button"
        data-toggle = "collapse"
        data-target = "#navbar-content"
      )
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href = "#") Conference Maker

    .collapse.navbar-collapse#navbar-content
      ul.nav.navbar-nav.navbar-right(ng-cloak)
        li(ng-hide = "ctrl.isLoggedIn()"): +modal-button("#signup") Sign Up
        li(ng-hide = "ctrl.isLoggedIn()"): +modal-button("#login") Log In
        li(ng-show = "ctrl.isLoggedIn()"): +modal-button("#new-conference") New Conference
        li(ng-show = "ctrl.isLoggedIn()"): +action-button("logOut") Log Out
        li(ng-show = "ctrl.isLoggedIn()"): +action-button("goToProfile") Your Profile
